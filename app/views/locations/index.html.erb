<h1>Trip Locations</h1>

<% if @trip.locations.any? %>
	<ul>
		<% @trip.locations.each do |location| %>
		<li>
			<%= link_to location.city, trip_location_path(id: location.id) %>,
				<%= link_to location.country, trip_location_path(id: location.id) %>
		</li>
		<% end %>
	</ul>
<% else %>
	<h3>No locations found. Please create one!</h3>
<% end %> 


<%= link_to 'New Location', new_trip_location_path %> |
<%= link_to 'All Trips', trips_path %>